extends ../layout
block content
  .container.admin-100vh
    h3.title-create-form Nueva Beca
    br
    form.container(method="POST")
      .form-group
        label Nombre
        input.form-control(type="text",name="nombre",required)
      .form-group
        label Beneficios
        textarea.form-control(type="text",name="beneficios", required)
      .form-group
        label Requisitos
        textarea.form-control(type="text",name="requisitos", required)
      .form-group
        label Tipo de Beca
        input.form-control(type="text",name="tipo_beca", required)
      .form-group
        label Area
        input.form-control(type="number",name="area_id")
      button.btn.btn-lg.btn-success(type="submit") Registrar Beca
      a.btn.btn-lg.btn-danger(href="/admin/becas") Volver
