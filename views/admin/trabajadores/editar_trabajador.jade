extends ../layout
block content
  .container.admin-100vh
    h3.title-create-form Editar trabajador
    br
    form.container(method="POST")
      .form-group
        label Nombre
        input.form-control(type="text",name="nombre",
                          value="#{trabajador.nombre}", required)
      .form-group
        label Apellido
        input.form-control(type="text",name="apellido",
                          value="#{trabajador.apellido}", required)
      .form-group
        label Cargo
        input.form-control(type="text",name="cargo",
                          value="#{trabajador.cargo}", required)
      .form-group
        label Especialidad
        input.form-control(type="text",name="especialidad",
                          value="#{trabajador.especialidad}", required)


      h3
        | Servicios(s)
        //a.btn.btn-success.btn-nuevo(href="#",data-model="Turno",
        //  data-model-max=2,class="addMore")
        //  | Agregar un Servicio
      each servicio in trabajador.Servicios
        .form-group
          label
          input.form-control.form-control-nowidth(type="text",
            name="servicio_nombre",
          value="#{servicio.nombre}", required, readonly)
          a.btn.btn-danger#removeItemEdit.removeItemEdit -
          input.hidden(type="text",name="servicios_ids",
          value="#{servicio.id}", required, readonly)
          br
        .itemAddContainer.addServicio.hidden
          .itemAdd.addServicio
            .form-group
              label= "Id"
              input.form-control(type="number",name="servicios_ids")
      //.form-group
      //  label Servicio
      //  input.form-control(type="text",name="servicio_nombre",
      //                    value="#{trabajador.Servicio.nombre}", required)
      //  input.hidden.form-control(type="number",name="servicio_id",
      //  value="#{trabajador.Servicio.id}")

      button.btn.btn-lg.btn-success(type="submit") Guardar Datos
      a.btn.btn-lg.btn-danger(href="/admin/trabajadores") Volver

