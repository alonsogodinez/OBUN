doctype html
html
  head
    title= title

    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')


  body
    nav.navbar.navbar-default
      .container
        - var area_url = ""

        .navbar-header
          button.navbar-toggle.collapsed(type='button',
          data-toggle='collapse', data-target='#navbar-menu',
          aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          //img.hidden-xs.navbar-brand(src="/images/logo.png")
          a.navbar-brand(href='/') #{title}
        #navbar-menu.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(href='#',data-toggle="dropdown")
                | Áreas
                span.caret
              ul.dropdown-menu
                each area in areas
                  li
                    - if( area.id == 1)  area_url= '/bienestar-saludable'
                    - if( area.id == 2)  area_url= '/bienestar-psicologico'
                    - if( area.id == 3)  area_url= '/bienestar-social'
                    a(href='#{area_url}')= area.nombre
            li.dropdown
              a.dropdown-toggle(href='#',data-toggle="dropdown")
                | Servicios
                span.caret
              ul.dropdown-menu
                li.dropdown-header Bienestar Saludable
                each servicio in servicios
                  - if(servicio.AreaId == 1)
                    li
                      a(href='/servicios/#{servicio.id}') #{servicio.nombre}

                li.dropdown-header Bienestar Psicologico
                  each servicio in servicios
                    - if(servicio.AreaId == 2)
                      li
                        a(href='/servicios/#{servicio.id}') #{servicio.nombre}

            li.dropdown
              a.dropdown-toggle(href='#',data-toggle="dropdown")
                | Becas
                span.caret
              ul.dropdown-menu
                each beca in becas
                  li
                    a(href="/becas/#{beca.id}") #{beca.nombre}

            li.dropdown
              a.dropdown-toggle(href='#',data-toggle="dropdown")
                | Fondos de Apoyo
                span.caret
              ul.dropdown-menu
                each fondo in fondos
                  li
                    a(href='/fondos-de-apoyo/#{fondo.id}')
                      | #{fondo.nombre}

            li.dropdown
              a.dropdown-toggle(href='#',data-toggle="dropdown")
                | Horarios de Atención
                span.caret
              ul.dropdown-menu
                each turno in turnos
                  li
                    a(href='/turnos/#{turno.id}')
                      | #{turno.nombre}


    block content

    script(src="/javascripts/jquery-2.1.4.min.js")
    script(src="/javascripts/bootstrap.min.js")











